{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "preDeployCommand": ["python manage.py makemigrations && python manage.py migrate --noinput"],
    "startCommand": "python manage.py collectstatic --noinput && daphne -b 0.0.0.0 -p $PORT petpal.asgi:application"
  }
}